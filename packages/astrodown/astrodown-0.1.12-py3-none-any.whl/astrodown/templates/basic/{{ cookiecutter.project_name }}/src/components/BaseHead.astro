---
const titleDefault = "astrodown";
const descriptionDefault = "astrodown is awesome";

interface Props {
    title?: string;
    description?: string;
}

const { title = titleDefault, description = descriptionDefault } = Astro.props;
---

<head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
</head>
