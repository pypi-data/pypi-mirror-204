---
interface Props {
  sidebarUseProse?: boolean;
  mainUseProse?: boolean;
}

const { sidebarUseProse = false, mainUseProse = true } = Astro.props;
---

<div class="grid grid-cols-4 gap-4">
  <div
    class:list={[
      "col-span-1",
      { prose: sidebarUseProse },
      "h-screen sticky top-[80px]",
    ]}
  >
    <slot name="sidebar" />
  </div>
  <div class:list={["col-span-3", { prose: mainUseProse }]}>
    <slot name="main" />
  </div>
</div>
