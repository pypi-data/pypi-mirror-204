<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for project.instance.process -->
    <record id="project_instance_process_tree" model="ir.ui.view">
        <field name="name">project.instance.process.tree</field>
        <field name="model">project.instance.process</field>
        <field name="arch" type="xml">
            <tree string="Processes">
                <field name="name" />
                <field name="odoo_version_id" />
                <field name="module_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- Form view for project.instance.process -->
    <record id="project_instance_process_form" model="ir.ui.view">
        <field name="name">project.instance.process.form</field>
        <field name="model">project.instance.process</field>
        <field name="arch" type="xml">
            <form string="Process">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="odoo_version_id" />
                        <field name="module_ids" widget="many2many_tags"
                            options="{'no_create': True}" domain="[('odoo_version_id', '=', odoo_version_id)]"/>
                        <field name="description" widget="text" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for project.instance.process -->
    <record id="project_instance_process_action" model="ir.actions.act_window">
        <field name="name">Processes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.instance.process</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="project_instance_process_tree" />
    </record>

    <!-- Menu item for project.instance.process -->
    <menuitem id="menu_project_instance_process" name="Processes" parent="project_instance_menu" sequence="30"
        action="project_instance_process_action" />
</odoo>
