#! /usr/bin/env python

import logging
import os
import platform

from lab.calls.call import Call
from lab import tools

tools.configure_logging()

logging.info(f"node: {platform.node()}")

run_log = open("run.log", "w")
run_err = open("run.err", "w", buffering=1)  # line buffering
redirects = {"stdout": run_log, "stderr": run_err}

# Make sure we're in the run directory.
os.chdir(os.path.dirname(os.path.abspath(__file__)))

Call(['./experiment_generator', 'domain.pddl', 'p-2-2-0.pddl', '10', '10', '10', '10', '7200', '1000000', '1', '1'], hard_stderr_limit=10240, hard_stdout_limit=10240, memory_limit=47040.0, name='complexity-10-1', soft_stderr_limit=64, soft_stdout_limit=1024, time_limit=180, **redirects).wait()

Call(['/home/dominik/anaconda3/bin/python', '../../experiment_parser.py'], hard_stderr_limit=10240, hard_stdout_limit=10240, memory_limit=None, name='experiment_parser', soft_stderr_limit=64, soft_stdout_limit=1024, time_limit=None, **redirects).wait()


for f in [run_log, run_err]:
    f.close()
    if os.path.getsize(f.name) == 0:
        os.remove(f.name)
