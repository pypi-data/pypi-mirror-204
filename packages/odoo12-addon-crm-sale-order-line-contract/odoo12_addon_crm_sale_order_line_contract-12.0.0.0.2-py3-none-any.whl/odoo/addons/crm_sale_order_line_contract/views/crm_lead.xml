<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_crm_sale_order_line_crm_lead_form" model="ir.ui.view">
      <field name="name">crm.sale.order.line.crm.lead.form</field>
      <field name="model">crm.lead</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="crm_sale_order_line.view_crm_sale_order_line_crm_lead_form"/>
      <field name="arch" type="xml">
        <xpath
          expr="//field[@name='crm_order_line_ids']/tree"
          position="inside"
        >
          <field name="attach_to_existing_contract" readonly="False" required="False"/>
          <field name="contract_id"
            attrs="{'readonly':False,'required':False}" />
          <field name="contract_date_start_type"/>
          <field name="termination_rule_type" required="True"/>
          <field name="termination_interval"
            attrs="{'invisible':[('termination_rule_type', '=', 'no_end')]}"/>
          <field name="invoice_partner_id"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
