<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form (invoice_partner)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']"
              position="after">
                <field name="is_contract" attrs="{'invisible': []}" />
                <field name="invoice_partner_id" attrs="{'invisible': [('is_contract', '=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>
